# Terminal Configurations
title = "Terminal"
theme = tokyonight
background = #0D1017

# Keybinds
keybind = ctrl+s>minus=new_split:down
keybind = ctrl+s>backslash=new_split:right
keybind = ctrl+s>x=close_surface
keybind = ctrl+s>equal=equalize_splits
keybind = ctrl+s>up=goto_split:top
keybind = ctrl+s>down=goto_split:bottom
keybind = ctrl+s>right=goto_split:right
keybind = ctrl+s>left=goto_split:left
